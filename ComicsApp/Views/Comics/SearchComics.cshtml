@model IEnumerable<ComicsApp.Models.Comic>

@{
    ViewData["Title"] = "SearchComics";
}

<h1>SearchComics</h1>

<form asp-controller="Comics" asp-action="SearchComics" method="get">
    <p>
        Comic: <input type="text" name="comicName" />
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table table-striped table-hover  table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComicName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.URL)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ComicCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ComicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.ComicCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.AuthorLastname)
                @Html.DisplayFor(modelItem => item.Author.AuthorFirstname)
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.PublisherName)
            </td>
            <td>
            <form   action="ComicsUser">
                <input type="hidden" value="@item.ComicId" name="id" />
				
                <input type="submit" value="Choose Comic" />
		</form>
        </td>
        </tr>
}
    </tbody>
</table>